<h1>Listing references</h1>

<table>
  <tr>
    <th>User</th>
    <th>Referable</th>
    <th>Referable type</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @references.each do |reference| %>
  <tr>
    <td><%= reference.user_id %></td>
    <td><%= reference.referable_id %></td>
    <td><%= reference.referable_type %></td>
    <td><%= reference.content %></td>
    <td><%= link_to 'Show', reference %></td>
    <td><%= link_to 'Edit', edit_reference_path(reference) %></td>
    <td><%= link_to 'Destroy', reference, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

