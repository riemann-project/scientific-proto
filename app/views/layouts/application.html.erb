<!DOCTYPE html>
<html>
<head>
  <title>Pipet</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <script type="text/javascript" src="http://cdn.mathjax.org/mathjax/1.1-latest/MathJax.js?config=default"></script>
  <script type="text/javascript" src="http://js.nicedit.com/nicEdit-latest.js"></script>
  <%= javascript_include_tag "application" %>

  <%= csrf_meta_tags %>
	<script type="text/javascript">

	  var _gaq = _gaq || [];
	  _gaq.push(['_setAccount', 'UA-32151781-1']);
	  _gaq.push(['_setDomainName', 'pipet.sc']);
	  _gaq.push(['_trackPageview']);

	  (function() {
	    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
	    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
	    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
	  })();
	</script>
	
	<!-- for mobile signin -->
	<% if current_user %>
		<script type="text/javascript" charset="utf-8">
			var user_id = "<%= current_user.id %>";
			var auth_token = "<%= current_user.authentication_token %>";
		</script>
	<% end %>
</head>
<body class="<%= controller.controller_name %>-<%= controller.action_name %>">
	<%= render 'layouts/header' %>
	<div class="container">
	  <%= yield %>
	</div>
	<%= render 'layouts/footer' %>
</body>
</html>
